<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Random Picker</title>
    <style media="screen">
      body {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 50px;
      }
    </style>
  </head>
  <body>
    <h1>Random Picker</h1>
    <form action="/" method="POST">
      <div>
        <textarea cols="100" rows="10" name="names"><%= names %></textarea>
      </div>
      <div>
        <input type="submit" />
      </div>
    </form>
    <% if (arrays !== null) {
        for (var property in arrays) {
          if (arrays.hasOwnProperty(property)) {
            var str = property + ": " + arrays[property].join(", "); %>
            <h3><%= str %></h3>
    <%    }
        }
      } %>

  </body>
</html>
