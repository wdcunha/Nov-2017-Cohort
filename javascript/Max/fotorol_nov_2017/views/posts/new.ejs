<%- include('../partials/header') %>

<h1>New Post</h1>

<form
  action="/posts"
  method='POST'
>
  <div>
    <label for="username">Username</label> <br/>
    <input type="text" name="username" value="">
  </div>
  <div>
    <textarea
      rows='5'
      name='content'
      placeholder="What's on your mind?"
    ></textarea>
  </div>
  <input
    type='submit'
    value='Submit'
  />
</form>

